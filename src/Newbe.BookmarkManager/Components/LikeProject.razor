       Visible="@_visible"
       Width="1000"
       OnCancel="() => _visible = false"
       OnOk="() => _visible = false">
    <p>
        Your support is the key to the growth of the project.
    </p>
    <p>
        We are looking forward to your liking or sharing this project at the following link.
    </p>
    <ul>
        <li>
            Github: <a href="https://github.com/newbe36524/Amazing-Favorites" target="_blank">https://github.com/newbe36524/Amazing-Favorites</a>
        </li>
        <li>
            Gitee: <a href="https://gitee.com/yks/Amazing-Favorites" target="_blank">https://gitee.com/yks/Amazing-Favorites</a>
        </li>
        <li>
            <a href="https://microsoftedge.microsoft.com/addons/detail/amazing-favorites/bknjgbpkaloajcphccpcnahegfglfiei" target="_blank">Microsoft Edge Extenstion Store</a>
        </li>
        <li>
            <a href="https://twitter.com/newbe36524/status/1403913613895737346" target="_blank">Twitter</a>
        </li>

    </ul>
</Modal>

@code {

    private bool _visible = false;

    private void OnClickLike(MouseEventArgs obj)
    {
        _visible = true;
    }

}